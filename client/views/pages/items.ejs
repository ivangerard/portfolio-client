<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../head.ejs %>
</head>

<body>
    <%- include ../nav.ejs %>
        <section class="content">
            <div class="container">
                <form id="form-item" action="" method="POST">
                    <div class="form-group">
                        <label for="txt-name">Item Code</label>
                        <input type="text" class="form-control" id="item_code" name="item_code" placeholder="name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="article">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Description</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="article">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Price</label>
                        <input type="text" class="form-control" id="price" name="price" placeholder="article">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Stock</label>
                        <input type="text" class="form-control" id="stock" name="stock" placeholder="article">
                    </div>

                    <button id="btn-hihi" type="submit" class="btn btn-default">Submit</button>
                </form>
              <br>
                <div class="panel panel-default">
                    <div class="panel-heading">My Cart</div>
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Item Code</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Menu</th>

<!--  -->
                            </tr>
                        </thead>
                        <tbody id="item-list" >

                        </tbody>
                    </table>
                </div>

            </div>
        </section>
        <%- include ../script.ejs %>
            <script src="/js/items.js"></script>
</body>

</html>
